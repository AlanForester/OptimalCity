# Production Environment Variables
# Скопируйте этот файл в .env и заполните значения

# API ключ для OpenWeatherMap
WEATHER_API_KEY=your_openweathermap_api_key_here

# Пароль для PostgreSQL
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Rails Master Key (из config/master.key) - НЕ ХАРДКОДИТЬ В КОДЕ!
# Получите значение командой: cat config/master.key
RAILS_MASTER_KEY=your_rails_master_key_here

# URL для NATS (оставьте по умолчанию для production)
NATS_URL=nats://nats:4222

# URL для базы данных (автоматически формируется из POSTGRES_PASSWORD)
# DATABASE_URL=postgresql://weather_user:your_password@postgres:5432/weather_display_production
